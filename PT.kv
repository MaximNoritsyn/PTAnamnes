<MainScreen>:

    BoxLayout:
        padding: [20, 20, 20, 20]
        orientation: 'vertical'

        Label:
            text: 'Main menu'

        BoxLayout:
            orientation: 'vertical'
            padding: [20, 20, 20, 20]

            Label:
                text: 'Patient'

            TextInput:
                padding: [10, 10, 10, 10]
                id: firstname_patient
                multiline: False
                line_height: 30
                font_size: 30
                halign: 'center'
                hint_text: 'First name'
                size_hint: (1, None)
                height: 50

            TextInput:
                padding: [10, 10, 10, 10]
                id: lastname_patient
                multiline: False
                line_height: 30
                font_size: 30
                halign: 'center'
                hint_text: 'Last name'
                size_hint: (1, None)
                height: 50

        BoxLayout:
            padding: [20, 20, 20, 20]



<SettingScreen>:

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Setting menu'

        BoxLayout:
            padding: [20, 20, 20, 20]
            Button:
                text: 'Shut down'
                on_press: root.shutdown()


<SubmitScreen>:

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        padding: [10, 10, 10, 10]

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                id: placeforcoution

            TextInput:
                id: login
                multiline: False
                line_height: 50
                font_size: 80
                halign: 'center'
                hint_text: 'Name of user'
                size_hint: (1, None)
                height: 100

            Button:
                text: 'Submit'
                title_align: 'center'
                size_hint: (1, None)
                height: 100
                on_press:
                    root.pt_login()

            BoxLayout: