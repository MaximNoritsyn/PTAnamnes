<MainScreen>:

    BoxLayout:
        padding: [20, 20, 20, 20]
        orientation: 'vertical'

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            id: questions

<SettingScreen>:

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Setting menu'

        BoxLayout:
            padding: [20, 20, 20, 20]
            Button:
                text: 'Shut down'
                on_press: root.shutdown()


<SubmitScreen>:

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        padding: [10, 10, 10, 10]

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                id: placeforcoution

            TextInput:
                id: login
                multiline: False
                line_height: 50
                font_size: 80
                halign: 'center'
                hint_text: 'Name of user'
                size_hint: (1, None)
                height: 100

            Button:
                text: 'Submit'
                title_align: 'center'
                size_hint: (1, None)
                height: 100
                on_press:
                    root.pt_login()

            BoxLayout:


<LayoutQuestion>:
    cols: 1
    rows: 1
    size_hint_y: None

    Label:
        id: text
        height: self.texture_size[1]
        text_size: self.width, None
        padding: 10, 10
        text:
            'test\n'


<TextInputFirstNamePatient, TextInputLastNamePatient>:
    padding: [10, 10, 10, 10]
    multiline: False
    line_height: 30
    font_size: 30
    halign: 'center'
    size_hint: (1, None)
    height: 50


<TextInputFirstNamePatient>:
    id: firstname_patient
    hint_text: 'First name'


<TextInputLastNamePatient>:
    id: lastname_patient
    hint_text: 'Last name'