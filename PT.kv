#: import SlideTransition kivy.uix.screenmanager.SlideTransition

ScreenManager:
    transition: SlideTransition(direction="right")
    id: screen_manager

	MainScreen:
		id: main_screen
		name: 'main'
		manager: screen_manager

	SettingsScreen:
		id: settings_screen
		name: 'settings'
		manager: screen_manager

<LoginPopup>:
    id: login_popup
    size: (400, 400)
    GridLayout
        cols:1

        Label:
            text: 'Name of user'

        TextInput:
            id: login
            height: 10
            multiline: False

        Button:
            text: 'Log in'
            on_press:
                root.pt_login()

<MainScreen>:

    Label:
        text: 'Main menu'

<SettingsScreen>:

    Label:
        text: 'Settings menu'