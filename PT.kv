#: import SlideTransition kivy.uix.screenmanager.SlideTransition

ScreenManager:
    transition: SlideTransition(direction="right")
    id: screen_manager

	LoginScreen:
		id: login_screen
		name: 'login'
		manager: screen_manager
	MainScreen:
		id: main_screen
		name: 'main'
		manager: screen_manager
	SettingsScreen:
		id: settings_screen
		name: 'settings'
		manager: screen_manager

<LoginScreen>:
    GridLayout
        cols:1
        Label:
            id: login
            text: 'Name of user'
        TextInput:
            id: txt_input
        Button:
            id: loginIn
            text: 'Log in'
            on_press: root.pt_login()

<MainScreen>:
    Label:
        text: 'Main menu'

<SettingsScreen>:
    Label:
        text: 'Settings menu'