#: import SlideTransition kivy.uix.screenmanager.SlideTransition

ScreenManager:
    transition: SlideTransition(direction="right")
    id: screen_manager

	MainScreen:
		id: main_screen
		name: 'main'
		manager: screen_manager

	SettingsScreen:
		id: settings_screen
		name: 'settings'
		manager: screen_manager

<LoginPopup>:
    id: popup
    title_size: 25
    title_align: 'center'
    title: 'Log in first'

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        padding: [10, 10, 10, 10]

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:

            TextInput:
                id: login
                multiline: False
                line_height: 50
                font_size: 20
                halign: 'center'
                hint_text: 'Name of user'
                size_hint: (1, None)
                height: 50

            Button:
                text: 'Log in'
                title_align: 'center'
                size_hint: (1, None)
                height: 50
                on_press:
                    root.pt_login()

            BoxLayout:

<MainScreen>:

    Label:
        text: 'Main menu'

<SettingsScreen>:

    Label:
        text: 'Settings menu'